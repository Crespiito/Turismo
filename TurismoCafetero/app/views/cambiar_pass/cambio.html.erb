<!DOCTYPE html>
<html>
  <head>
  </head>
  <body>

  <div class= "container-fluid baner">
    <div class="row"> 
      <div class="col-xs-6 col-md-7 col-lg-7">
        <h1 class="titulo" id="titulo">De Turismo por el Eje</h1>
      </div>
      <div class="col-xs-1 col-md-1 col-lg-1 banner-btn">
      <br>
        <div id="titulo">
          <% if session[:sus] or session[:admin] or session[:root] %>
            <%= button_to 'Volver', home_index_path ,class:"btn btn-default btn-lg" %>
          <% end %>
        </div> 
      </div>
    </div>
  </div>

  	<%= form_for(:contra, url: {:action => :cambio_pass}) do |f| %>
  		<p>Escriba su nueva contraseña: </p>
  		<%= f.password_field :password, autocomplete: "off" ,class:"form-control" %>
      <p>Confirme su nueva contraseña: </p>
      <%= f.password_field :password_confirm, autocomplete: "off" ,class:"form-control" %>
			<%= f.submit "Cambiar" ,class:"btn btn-default btn-lg"%> 
	  <% end %>

  <% if flash[:notice] == "si" %>
    <br><div class="notice">La clave ha sido cambiada con exito</div>
  <% end %>

  <% if flash[:notice] == "no" %>
    <br><div class="notice">Las contraseñas no coinciden</div>
  <% end %>

  </body>
</html>
